{
  "manifest_version": 2,
  "name": "Laragon Key Closer",
  "version": "1.0",
  "description": "Ferme automatiquement les onglets s'ouvrant sur https://laragon.org/key.",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "laragoncloser@ton-domaine.com",
      "data_collection_permissions": {
          "required": ["none"],
          "optional": []
      }
    }
  },
  
  "permissions": [
    "tabs",
    "https://laragon.org/*",
    "webNavigation" 
  ],
  
  "background": {
    "scripts": ["background.js"]
  }
}